        <section class="other-info">
            <label class="font" for="title">Title: </label>
            <input type="text" id="title" name="title" value="<%=title %>"/>
            <label class="font" for="releasedate">Release Date: </label> 
            <input class="input font" type="text" name="releasedate" value="<%=releasedate %>"/>
            <label class="font" for="tags">Tags: </label>
            <input class="input font" type="text" name="tags" value="<%=tags %>"/>
            <label class="font" for="developer">Developer: </label>
            <input class="input font" type="text" name="developer" value="<%=developer %>"/>

            <label class="font" for="owned">Owned: </label>
                <% if (owned === true) { %>
                    <input class="input font" id="owned-box" type="checkbox" name="owned" checked/>
                <% } else { %>
                    <input class="input font" id="owned-box" type="checkbox" name="owned"/>
                <% } %>

            <fieldset>
                <legend>Status:</legend>
                <label class="font" for="inprogress">In Progress: </label>
                    <% if (inprogress === true) { %>
                        <input id="inprogress" type="radio" name="status" checked/>
                    <% } else { %>
                        <input type="radio" name="inprogress"/>
                    <% } %>
                <label class="font" for="complete">Complete: </label>
                    <% if (complete === true) { %>
                        <input id="complete" type="radio" name="status" checked/>
                    <% } else { %>
                    <input type="radio" name="complete"/>
                    <% } %>
            </fieldset>
        </section>
        <p>Game Notes:</p>
        <article class="notes">
            <input type="text" name="notes" value="<%=notes %>"/>
        </article>
        <input type="submit" value="Submit">

        <button>cancel</button>
    </div>
</main>
</form>