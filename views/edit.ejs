<h1 contentEditable="true"><%=title %></h1>
<main class="container">
    <div class="each-game">
        <div class="game-img">
            <img src="<%=img %>" height="150"/>
        </div>
        <!-- <section class="checkboxes">
            <p>In-Progress</p>
