<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1>GamerList</h1>
                </div>
                <div class="col">
                    <h4>All Games</h4>
                </div>
                <div class="col">
                    <h4>My Wishlist</h4>
                </div>
                <div class="col">
                    <h4>My Games</h4>
                </div>
                <div class="col">
                    <h4>Login</h4>
                </div>
            </div>
        </div>
    </nav>
    <main class="container">

            <% games.forEach(v => { %>
                <img src="<%=v.img %>" height="100" />
                <h1><%=v.title %></h1>
                <form action="/games/<%=v.id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete">
                    </form>
                    <a href="/games/<%=v.id %>/view" class="view buttons">View</a>
                
                <% }) %>
            <a href="/games/add" class="add buttons">Add New Game</a>
    </main>

